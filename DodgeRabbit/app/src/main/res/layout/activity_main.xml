<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#E3B43C"
    android:gravity="center">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="269dp"
        app:srcCompat="@drawable/game_title" />

    <ImageView
        android:layout_width="292dp"
        android:layout_height="174dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        app:srcCompat="@drawable/rabbit" />

    <Button
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:backgroundTint="#F68007"
        android:fontFamily="@font/kenney_blocks"
        android:onClick="startGame"
        android:text="Start"
        android:textColor="@android:color/black"
        android:textSize="32sp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:backgroundTint="#F38107"
        android:fontFamily="@font/kenney_blocks"
        android:text="Options"
        android:textColor="@color/black"
        android:textSize="32sp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:backgroundTint="#EA750F"
        android:fontFamily="@font/kenney_blocks"
        android:onClick="exit"
        android:text="Exit"
        android:textColor="@color/black"
        android:textSize="32sp" />


</LinearLayout >